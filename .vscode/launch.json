{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": ["./images/reading_dog_2/reading_dog.jpg", "./images/reading_dog_2/out/reading_dog_out.ppm"],
            "stopAtEntry": false,
            //"cwd": "${workspaceFolder}/sprint-15/step-3",
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "stop-on-solib-events",
                    "text": "set stop-on-solib-events 0"
                }
            ],
            "targetArchitecture": "x86_64",
            "logging": {
                "moduleLoad": true,
                "programOutput": true,
                "trace": false
            }
        },
        {
            "name": "(gdb) Launch SANITIZE",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                },
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_stack_use_after_return=1:detect_leaks=0"
                }
            ],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
